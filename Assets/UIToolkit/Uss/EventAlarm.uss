.event_alarm {
    width: 600px;
    height: 100px;
    background-color: rgb(0, 0, 0);
}

.wait {
    opacity: 0;
}

.active {
    position: absolute;
    bottom: 30px;
    opacity: 1;
}

.select_button {
    width: auto;
    height: auto;
    font-size: 30px;
    padding-left: 60px;
    padding-right: 60px;
    padding-top: 7px;
    padding-bottom: 7px;
    background-color: rgb(0, 0, 0);
    margin-top: 10px;
    color: rgb(255, 255, 255);
}

.select_button:hover {
    width: auto;
    height: auto;
    font-size: 30px;
    padding-left: 60px;
    padding-right: 60px;
    padding-top: 7px;
    padding-bottom: 7px;
    background-color: rgb(0, 0, 0);
    margin-top: 10px;
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
    color: rgb(255, 255, 255);
}
