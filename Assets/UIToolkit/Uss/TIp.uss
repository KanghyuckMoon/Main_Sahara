.panel_deco_top {
    translate: -3000px 0;
}

.panel_deco_bot {
    translate: 3000px 0;
}

.panel_deco_init {
    translate: 0 0;
}

.panel_deco {
    width: 100%;
    height: 25%;
    background-color: rgb(0, 0, 0);
    transition-property: translate;
    transition-duration: 0.7s;
    transition-timing-function: ease-out;
    scale: 1 1.01;
}
